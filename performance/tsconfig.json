{
    "include": [
        "src/**/*"
    ],
    "compilerOptions": {
        "moduleResolution": "bundler",
        "module": "ESNext",
        "target": "ESNext",
        "lib": [
            "ESNext",
            "DOM"
        ],
        "rootDir": ".",
        "baseUrl": ".",
        "outDir": "dist",
        "pretty": true,
        "strict": false,
        "isolatedModules": false,
        "esModuleInterop": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "noImplicitReturns": false,
        "skipLibCheck": true,
        "maxNodeModuleJsDepth": 0,
        "paths": {
            "@packages/ecs": [
                "../packages/ecs/src"
            ],
            "@packages/define": [
                "../packages/define/src"
            ],
            "references": [
                "../packages/ecs",
                "../packages/define"
            ]
        },
    }
}